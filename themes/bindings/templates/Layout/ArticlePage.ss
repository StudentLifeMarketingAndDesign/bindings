<article>
	<header>
		<span class="category">Category</span>
		<h1>$Title</h1>
		<% include Byline %>
	</header>
	<img src="{$ThemeDir}/images/example-cover.jpg" class="cover" />
	<div class="row">
		<div class="large-9 columns">
			<div class="content-text">
				$Content
			</div>
		</div>

		<div class="large-3 columns">
			$SecondaryContent
		</div>

	</div>
	$Form
</article>